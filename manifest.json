{
  "manifest_version": 3,
  "name": "YouTube Flex2 — FullWindow + Zoom (Stable)",
  "version": "3.1.0",
  "description": "Stabil Full Window med mjuka övergångar och enhetlig zoom.",
  "incognito": "split",
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  "action": {
    "default_title": "YouTube Flex2",
    "default_popup": "popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["components/*.css", "components/*.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
