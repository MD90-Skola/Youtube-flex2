{
  "manifest_version": 3,
  "name": "YouTube Flex2 — FullWindow + Zoom (Stable)",
  "version": "3.0.0",
  "description": "Stabil Full Window med mjuka övergångar och enhetlig zoom.",
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["components/*.css", "components/*.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
